<graph id="worldcover-s2-pp">
    <version>1.0</version>

    <node id="ReadDem">
        <operator>Read</operator>
        <sources/>
        <parameters>
            <file>${sourceFileDem}</file>
            <formatName>GeoTIFF</formatName>
        </parameters>
    </node>

    <node id="ResampleDemTo10m">
        <operator>Resample</operator>
        <sources>
            <sourceProduct refid="ReadDem"/>
        </sources>
        <parameters>
            <targetResolution>10</targetResolution>
            <upsampling>Nearest</upsampling>
            <resampleOnPyramidLevels>false</resampleOnPyramidLevels>
        </parameters>
    </node>

    <node id="ReadMsi">
        <operator>Read</operator>
        <sources/>
        <parameters>
            <file>${sourceFileMsi}</file>
        </parameters>
    </node>

    <node id="ResampleMsiTo10m">
        <operator>Resample</operator>
        <sources>
            <sourceProduct refid="ReadMsi"/>
        </sources>
        <parameters>
            <targetResolution>10</targetResolution>
            <upsampling>Nearest</upsampling>
            <resampleOnPyramidLevels>false</resampleOnPyramidLevels>
        </parameters>
    </node>

    <node id="Merge">
        <operator>Merge</operator>
        <sources>
            <masterProduct refid="ResampleMsiTo10m"/>
            <sourceProduct refid="ResampleDemTo10m"/>
        </sources>
        <parameters>
            <includes>
                <include>
                    <productId>sourceProduct</productId>
                    <name>band_1</name>
                    <newName>elevation</newName>
                </include>
            </includes>
            <geographicError>NaN</geographicError>
        </parameters>  
    </node>

    <node id="Classify">
        <operator>Idepix.S2</operator>
        <sources>
            <sourceProduct refid="Merge"/>
        </sources>
        <parameters>
            <copyToaReflectances>true</copyToaReflectances>
            <computeMountainShadow>false</computeMountainShadow> <!-- @todo set to true -->
            <computeCloudShadow>false</computeCloudShadow> <!-- @todo set to true -->
            <computeCloudBuffer>true</computeCloudBuffer>
            <computeCloudBufferForCloudAmbiguous>false</computeCloudBufferForCloudAmbiguous>
            <cloudBufferWidth>10</cloudBufferWidth>
            <demName/>
        </parameters>
    </node>
    
    <node id="TakeClassificationFlags">
        <operator>Subset</operator>
        <sources>
            <sourceProduct refid="Classify"/>
        </sources>
        <parameters>
            <referenceBand>pixel_classif_flags</referenceBand>
            <sourceBands>pixel_classif_flags</sourceBands>
            <geoRegion/>
            <subSamplingX>1</subSamplingX>
            <subSamplingY>1</subSamplingY>
            <fullSwath>false</fullSwath>
            <tiePointGridNames/>
            <copyMetadata>true</copyMetadata>
        </parameters>
    </node>
    
    <node id="Write">
        <operator>Write</operator>
        <sources>
            <sourceProduct refid="TakeClassificationFlags"/>
        </sources>
        <parameters>
            <file>${targetFile}</file>
            <formatName>GeoTIFF</formatName>
        </parameters>
    </node>
</graph>
